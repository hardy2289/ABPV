<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ranklabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="  Appointment ID             : "
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/font_size" />

        <TextView
            android:id="@+id/AppointmentIDP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/font_size"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/populationlabel1"
            android:layout_toEndOf="@+id/populationlabel1" />



        <TextView
            android:id="@+id/populationlabel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ranklabel"
            android:layout_toLeftOf="@+id/Appointment_Date"
            android:text="  Patient ID                       :  "
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/font_size" />

        <TextView
            android:id="@+id/PatientIDP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/populationlabel1"
            android:layout_toEndOf="@+id/populationlabel1"
            android:layout_toRightOf="@+id/populationlabel1"
            android:text="41"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/font_size" />

        <TextView
            android:id="@+id/populationlabel12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/populationlabel1"
            android:layout_toLeftOf="@+id/Appointment_Date"
            android:text="  Last Name                     :  "
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/font_size" />

        <TextView
            android:id="@+id/LastNameDP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PatientIDP"
            android:layout_toRightOf="@+id/populationlabel12"
            android:text="Tailor"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/font_size" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/Doctor_id"
            android:layout_marginRight="10dp"
            android:background="@drawable/arrow_right" />

    </RelativeLayout>

</LinearLayout>