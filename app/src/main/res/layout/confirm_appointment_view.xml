<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="250dp"
    android:layout_marginBottom="50dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="150dp"
    android:background="@android:drawable/dialog_holo_dark_frame">

    <TextView
        android:id="@+id/ranklabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Doctor ID            : "
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/Doctor_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"

        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/ranklabel"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/countrylabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ranklabel"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:text="Doctor Name       : "
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/Doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Doctor_id"

        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/countrylabel"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/populationlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/countrylabel"
        android:layout_alignRight="@+id/countrylabel"
        android:layout_alignTop="@+id/Appointment"
        android:text="Appointment        : "
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/Appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Doctor_name"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"

        android:layout_toRightOf="@+id/populationlabel"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/populationlabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/populationlabel"
        android:layout_alignStart="@+id/populationlabel"
        android:layout_below="@+id/populationlabel"
        android:layout_marginTop="18dp"
        android:text="Appointment No     : "
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/Appointment_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Appointment"
        android:layout_alignStart="@+id/Appointment"
        android:layout_alignTop="@+id/populationlabel2"
        android:textColor="@android:color/background_light" />


    <Button
        android:id="@+id/appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Appointment"
        android:textColor="@android:color/background_dark"
        android:layout_above="@+id/appointment_Cancel"
        android:layout_marginBottom="14dp"
        android:layout_alignRight="@+id/appointment_Cancel"
        android:layout_alignEnd="@+id/appointment_Cancel"
        android:layout_alignLeft="@+id/appointment_Cancel"
        android:layout_alignStart="@+id/appointment_Cancel" />

    <Button
        android:id="@+id/appointment_Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Appointment"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

