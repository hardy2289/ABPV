<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ganesha.abpv.MainActivities.MainActivities.PatientFragment.RequestAppointmentF">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false">


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#99257bd7"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="16dp"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="8dp">


            <EditText
                android:id="@+id/txtPatientDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/RPatientName"
                android:layout_marginTop="7dp"
                android:clickable="true"
                android:drawableRight="@android:drawable/ic_menu_my_calendar"
                android:hint="Patient DOB    DD/MM/YYYY"
                android:inputType="date"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/background_light"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/RAppointmentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/RDoctor"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/RDoctor"
                android:layout_below="@+id/RDoctor"
                android:layout_marginTop="6dp"
                android:clickable="true"
                android:drawableRight="@android:drawable/ic_menu_my_calendar"
                android:hint="Appointment Date   DD/MM/YYYY "
                android:inputType="date"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/background_light"
                android:textSize="16dp" />

            <Button
                android:id="@+id/Request"
                style="@android:style/ButtonBar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="55dp"
                android:background="@drawable/button"
                android:clickable="true"
                android:text="Request Appointment"
                android:textColor="@color/bright_foreground_inverse_material_light"
                android:textSize="15dp" />


            <EditText
                android:id="@+id/RPatientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/RAppointmentTime"
                android:layout_marginTop="12dp"
                android:hint="Patient Last Name"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/background_light" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="5dp"
                android:background="@android:color/background_dark"
                android:orientation="horizontal">


            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                android:text="Appointment Request"
                android:textColor="@android:color/background_light"
                android:textColorHint="@android:color/background_light"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/RDoctor"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/RAppointmentTime"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/RAppointmentTime"
                android:layout_below="@+id/textView2"
                android:background="@android:color/background_light"
                android:focusable="false"
                android:spinnerMode="dialog"
                android:textColor="@android:color/black">

            </Spinner>

            <EditText
                android:id="@+id/PatientPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtPatientDate"
                android:drawableRight="@android:drawable/ic_menu_call"
                android:hint="Patient Contact No"
                android:inputType="number|textPhonetic"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/background_light"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/RAppointmentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="false"
                android:hint="Appointment Time"
                android:inputType="time"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/background_light"
                android:textSize="16dp"
                android:layout_below="@+id/RAppointmentDate"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:layout_below="@+id/linearLayout"
                android:layout_marginTop="20dp"
                android:text="Select Doctor"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/background_light"
                android:textSize="14dp" />


        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>
