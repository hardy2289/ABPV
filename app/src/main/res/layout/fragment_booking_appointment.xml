<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#99e5eef1"
            android:id="@+id/Popdoc2"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">


                <TextView
                    android:textSize="@dimen/font_size"
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="Total Patient"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:textSize="@dimen/font_size"
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="15dp"
                    android:text="Male Patient"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:textSize="@dimen/font_size"
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView3"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="15dp"
                    android:text="Female Patient"
                    android:textColor="@android:color/background_dark" />

                <RelativeLayout
                    android:textSize="@dimen/font_size"
                    android:id="@+id/relativeLayout4"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView4"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/background_light"></RelativeLayout>


                <TextView
                    android:textSize="@dimen/font_size"
                    android:id="@+id/TotalPatient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_marginLeft="25dp"
                    android:layout_toEndOf="@+id/textView2"
                    android:layout_toRightOf="@+id/textView2"
                    android:focusable="true"
                    android:text="16"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:textSize="@dimen/font_size"
                    android:id="@+id/FemalePat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView4"

                    android:layout_alignLeft="@+id/TotalPatient"
                    android:layout_alignStart="@+id/TotalPatient"
                    android:text="7"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:textSize="@dimen/font_size"
                    android:id="@+id/MalePatient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/TotalPatient"
                    android:layout_alignStart="@+id/TotalPatient"
                    android:layout_alignTop="@+id/AvailableApp"
                    android:text="8"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:textSize="@dimen/font_size"
                    android:id="@+id/DocPopular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/TotalPatient"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/TotalPatient"
                    android:layout_toRightOf="@+id/TotalPatient"
                    android:text="Popular Doctor"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:textSize="@dimen/font_size"
                    android:id="@+id/DocAvailable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/DocPopular"
                    android:layout_alignStart="@+id/DocPopular"

                    android:layout_alignTop="@+id/FemalePat"
                    android:text="Availability"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:textSize="@dimen/font_size"
                    android:id="@+id/popDoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/DocPopular"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/DocPopular"
                    android:layout_toRightOf="@+id/DocPopular"
                    android:text=" Dr Bakari"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:textSize="@dimen/font_size"
                    android:id="@+id/Available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/popDoc"
                    android:layout_alignStart="@+id/popDoc"
                    android:layout_alignTop="@+id/DocAvailable"
                    android:text=" Yes"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:textSize="@dimen/font_size"
                    android:id="@+id/AvailableApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView3"

                    android:layout_alignBottom="@+id/textView3"
                    android:layout_alignLeft="@+id/DocPopular"
                    android:layout_alignStart="@+id/DocPopular"
                    android:text="Available App "
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:textSize="@dimen/font_size"
                    android:id="@+id/TotalAppointments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/popDoc"
                    android:layout_alignStart="@+id/popDoc"
                    android:layout_alignTop="@+id/AvailableApp"
                    android:text=" 0"
                    android:textColor="@android:color/background_dark" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignBottom="@+id/relativeLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@android:color/background_light"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true" />

                <EditText
                    android:id="@+id/ApponintmentSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/relativeLayout4"
                    android:background="@android:drawable/alert_light_frame"
                    android:drawableRight="@android:drawable/ic_menu_search"
                    android:hint="Type Doctor Name ........"
                    android:maxLength="36"
                    android:paddingLeft="20dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="16dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/points_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/cardview_light_background"
                    android:clipToPadding="false"
                    android:padding="5dp"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/listview_item_display"
                    android:layout_below="@+id/ApponintmentSearch" />

        </RelativeLayout>

</FrameLayout>
